<header class="mb-10 md:mb-18 lg:mb-24 xl:mb-40">
  <div class="container mx-auto px-4 py-12">
    <div
      class="flex flex-col md:flex-row md:justify-between md:items-center border-t-4 border-custom-dark"
    >
      <h1 class="text-6xl md:text-7xl lg:text-8xl font-lekton font-bold mt-4 mb-4">
        Alan Henry
      </h1>
      <nav>
        <ul class="space-x-10 lg:space-x-16">
          {% if page.url == "/blog/" %}
          <li class="inline-block">
            <a
              href="/"
              class="text-3xl md:text-4xl font-lekton hover:text-blue-400 hover:underline focus-visible:px-2 focus-visible:bg-yellow-400 focus-visible:border-b-4 focus-visible:border-black focus-visible:font-sans"
              >&#60; Back</a
            >
          </li>
          {% elseif "posts/blog" in page.url %}
          <li class="inline-block">
            <a
              href="/blog/"
              class="text-3xl md:text-4xl font-lekton hover:text-blue-400 hover:underline focus-visible:px-2 focus-visible:bg-yellow-400 focus-visible:border-b-4 focus-visible:border-black focus-visible:font-sans"
              >&#60; Back</a
            >
          </li>
          {% else %}
          <li class="inline-block">
            <a
              href="#portfolio"
              class="text-3xl md:text-4xl font-lekton hover:text-blue-400 hover:underline focus-visible:px-2 focus-visible:bg-yellow-400 focus-visible:border-b-4 focus-visible:border-black focus-visible:font-sans"
              >Portfolio</a
            >
          </li>
          <li class="inline-block">
            <a
              href="/blog/"
              class="text-3xl md:text-4xl font-lekton hover:text-blue-400 hover:underline focus-visible:px-2 focus-visible:bg-yellow-400 focus-visible:border-b-4 focus-visible:border-black focus-visible:font-sans"
              >Blog</a
            >
          </li>
          {% endif %}
        </ul>
      </nav>
    </div>
  </div>
</header>
