---
layout: 'layouts/base.njk'
---

<main>
  <section>
    <div class="container mb-24 mx-auto px-4">
      <article>
        <div class="grid grid-cols-1 lg:grid-cols-2 items-end mb-6 lg:mb-10">
          <h2
            class="lg:ml-8 mb-4 md:mb-6 lg:mb-0 text-5xl md:text-6xl xl:text-8xl font-lekton font-semibold align-bottom lg:order-2"
          >
            {{ title }}
          </h2>
          <img
            class="rounded-t align-bottom lg:order-1"
            src="{{ featuredImage }}"
            alt="Featured image for {{ title }}"
          />
        </div>
        <p
          class="text-sm md:text-base text-gray-500 font-libreFranklin font-semibold uppercase mb-2"
        >
          Published on {{ date | dateFilter }}
        </p>

        <p
          class="post-content prose prose-lg full-description text-base font-libreFranklin font-semibold text-gray-700 mb-3"
        >
          {{ description }}
        </p>

        <div
          class="post-content prose prose-lg text-base text-custom-dark font-libreFranklin leading-relaxed"
        >
          {{ content | safe }}
        </div>
      </article>
    </div>
  </section>
</main>
